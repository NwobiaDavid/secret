<%- include('partials/header') %>

<div class="text-center secret">
  <div class="container pt-5">
    <i class="fas fa-key fa-6x"></i>
    <h1 class="display-3">You've Discovered My Secret!</h1>

    <% usersWithSecrets.forEach(user =>{ %>
      <% if(user.secrets.length>1){ %>
        <% for(let i=0; i<user.secrets.length; i++){ %>
          <p class="secret-text"><%= user.secrets[i]%></p>
          <% } %>
        <%}else{ %>
         <p class="secret-text"><%= user.secrets%></p>
     <% }%>
    <% }) %>
    
    <hr>
    
    <a class="btn btn-light btn-lg" href="/logout" role="button">Log Out</a>
    <a class="btn btn-dark btn-lg" href="/submit" role="button">Submit a Secret</a>
  </div>
</div>

<%- include('partials/footer') %>
